#! /usr/bin/env python
# lc - letter count (similar to POSIX standard tool wc - word count)
# counts unique letters from stdin or a text file and
# outputs a list of the letters
#

import sys, os, os.path

if len(sys.argv) != 2:
  data = sys.stdin.read()

  if len(data) == 0:
    print 'Usage: lc <String or Filename>'
    exit(1)
else:
  if os.path.isfile(sys.argv[1]):
    f = open(sys.argv[1])
    data = f.read()
    f.close()
  else:
    data = sys.argv[1]

data = data.replace('\n', ' ')

seen = {}
list = []
for l in data:
  if l in seen: continue
  seen[l] = 1
  list.append(l)

liststr = ''
for elem in list:
  liststr += elem

print 'Input string contains %d unique characters: \n\n%s ' % (len(list), liststr)
